@model IpharmWebAppProject.Models.User

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="~/css/EditStyleSheet.css" />
    <link rel="stylesheet" href="~/css/StyleSearchPage.css" />

</head>

<div class="title-div">
    <a class="title-edit" style="        color: #F5F5F5;
        text-shadow: 2px 2px #face9e; margin-bottom:20px;
    ">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)'s Details</a>
</div>


<dl class="row">
    @if (Context.User.Claims.ElementAt(10).Value == "Manager") //Manager
    {
        <dt class="col-sm-2">
            Type:
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    }
    <dt class="col-sm-2">
        Email:
    </dt>
    <dd class="col-10">
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt class="col-sm-2">
        Mobile:
    </dt>
    <dd class="col-10">
        @Html.DisplayFor(model => model.Mobile)
    </dd>

    <dt class="col-sm-2">
        Birthday:
    </dt>
    <dd class="col-sm-10">
        @Model.Birthday.ToShortDateString()
    </dd>

    <dt class="col-sm-2">
        Adress:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Country), @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.Adress),  @Html.DisplayFor(model => model.PostalCode)
    </dd>
</dl>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a>*@
    <a class="btn bt" asp-action="Index">
        Back to List
    </a>
</div>
