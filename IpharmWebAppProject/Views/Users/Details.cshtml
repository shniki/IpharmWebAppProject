@model IpharmWebAppProject.Models.User

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="~/css/EditStyleSheet.css" />
</head>

<div class="title-div">
    <a class="title-edit" style="        color: #F5F5F5;
        text-shadow: 2px 2px #face9e; margin-bottom:20px;
    ">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)'s Details</a>
</div>


<dl class="row">
    <dt class="col-2">
        Email
    </dt>
    <dd class="col-2">
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt class="col-2">
        Mobile
    </dt>
    <dd class="col-2">
        @Html.DisplayFor(model => model.Mobile)
    </dd>

    <dt class="col-2">
        Birthday
    </dt>
    <dd class="col-2">
        @Model.Birthday.ToShortDateString()
    </dd>

    <dt class="col-sm-4">
        Adress
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.PostalCode)
    </dd>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Adress)
    </dd>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.Country)
    </dd>
</dl>

