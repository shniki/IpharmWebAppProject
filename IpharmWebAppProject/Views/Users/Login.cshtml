@model IpharmWebAppProject.Models.User


@{ ViewData["Title"] = "Login";
    Layout = "Login_layout"; }

<link rel="stylesheet" href="~/css/Login.css" />

<div class="container2" id="container">
    <div class="form-container sign-in-container">
        
        <form asp-action="Login" asp-route-returnUrl='@Context.Request.Query["ReturnUrl"]' method="post" class="login_form" name="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1>Login</h1>
            <div class="form-group">
                <input type="email" autocomplete="off" asp-for="Email" placeholder="aaa@bbbb.com" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group space">
                <input type="password" autocomplete="off" asp-for="Password" placeholder="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="login">
                <input asp-action="Login" asp-controller="Users" type="submit" value="LOGIN" />
                @if (ViewBag.Error != null)
                {
                    <div class="text-danger">@ViewBag.Error</div>
                }
            </div>

            <div class="signup">
                <p>  Don't have account? <a asp-action="Register" asp-controller="Users">Click Here</a> to register</p>
            </div>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>Enter your personal details and start journey with us :)</p>
                <div class="reactivate">
                    <p> Have you recently deleted your account? click here  to reactivate your account <input asp-action="Reactivate" asp-controller="Users" type="submit" value="REACTIVATE" /></p>
                </div>
            </div>
        </div>
       
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
