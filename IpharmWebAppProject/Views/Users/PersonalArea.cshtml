@model IpharmWebAppProject.Models.User

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="~/css/EditStyleSheet.css" />
    <link rel="stylesheet" href="~/css/ProductDetailsStyleSheet.css" />
</head>

<div class="title-div">
    <a class="title-edit" style="        color: #F5F5F5;
        text-shadow: 2px 2px #face9e; margin-bottom:20px;
    ">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</a>
</div>

<dl class="row">
    <dt class="col-sm-2">
        Email:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Email)
    </dd>

    <dt class="col-sm-2">
        Mobile:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Mobile)
    </dd>

    <dt class="col-sm-2">
        Birthday:
    </dt>
    <dd class="col-sm-10">
        @Model.Birthday.ToShortDateString()
    </dd>

    <dt class="col-sm-2">
        Adress:
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Country), @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.Adress),  @Html.DisplayFor(model => model.PostalCode)
    </dd>

    <dd class="col-sm-10">
        <iframe id="map" width="300" height="300" style="border:0" loading="lazy" allowfullscreen src=""></iframe>
    </dd>
</dl>

<script>
    window.model = @Html.Raw(Json.Serialize(Model));
    $('#map').attr("src", encodeURI("https://www.google.com/maps/embed/v1/place?q=" + window.model.adress + ", " + window.model.city + "&key=AIzaSyDm7w6h735pB8dQJR3ixcPt_VLXEyDzcS0"));
</script>

<a asp-action="Edit" class="btn bt">Edit Personal Info</a>
<a asp-action="Logout" class="btn bt">Log Out</a>
